import java.util.Scanner;
public class main {
    public static void main(String[] args) {
        Climb test = new Climb();
        Scanner in = new Scanner(System.in);
        System.out.print("Длина маршута: ");
        int length = in.nextInt();
        test.setLength(length);
        System.out.print("Максимальная вершина: ");
        int max_height = in.nextInt();
        test.setMax_height(max_height);
        System.out.print("Перепад трех ближайших вершин: ");
        int step = in.nextInt();
        test.setDifference3_step(step);
        test.printRoute();
        in.close();}}
